<Page
    x:Class="PddApp.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Content="Назад" Click="BackButton_Click" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="О программе ПДД-тренажер" FontSize="30" FontWeight="SemiBold" Margin="0,0,0,20"/>
            <TextBlock Text="Версия 1.0. Разработано в рамках учебного проекта." TextWrapping="Wrap" Width="500"/>
        </StackPanel>
    </Grid>
</Page>