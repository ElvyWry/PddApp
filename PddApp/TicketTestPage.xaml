<Page
    x:Class="PddApp.TicketTestPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PddApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="0,0,30,0">

            <TextBlock x:Name="TicketTitle" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Margin="0,0,0,20"/>

            <Image x:Name="QuestionImage" 
                   MaxHeight="350" 
                   Stretch="Uniform" 
                   Margin="0,0,0,20" 
                   HorizontalAlignment="Left"
                   Visibility="Collapsed"/>

            <TextBlock x:Name="QuestionText" 
                       TextWrapping="Wrap" 
                       FontSize="18" 
                       FontWeight="SemiBold"
                       Margin="0,0,0,15"/>

            <StackPanel x:Name="OptionsPanel" 
                        Spacing="5" 
                        Margin="0,0,0,25"/>

            <TextBlock x:Name="ExplanationText" 
                       TextWrapping="Wrap" 
                       FontSize="16" 
                       Margin="0,0,0,20" 
                       Visibility="Collapsed"/>

            <StackPanel Orientation="Horizontal" Spacing="20">
                <Button x:Name="CheckButton" 
                        Content="Подтвердить" 
                        Click="CheckButton_Click" 
                        Background="SteelBlue" 
                        Foreground="White"/>

                <Button x:Name="SkipButton" 
                        Content="Пропустить" 
                        Click="SkipButton_Click"
                        Background="Gray" 
                        Foreground="White"/>

                <Button x:Name="FinishButton" 
                        Content="Завершить тест" 
                        Click="FinishButton_Click"
                        Visibility="Collapsed"
                        Background="Red" 
                        Foreground="White"/>

            </StackPanel>
        </StackPanel>

        <Border Grid.Column="1" 
                BorderBrush="LightGray" 
                BorderThickness="1" 
                CornerRadius="8" 
                Padding="15" 
                MinHeight="600"
                Width="250">
            <StackPanel>
                <TextBlock Text="Прогресс билета" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,10"/>

                <GridView x:Name="QuestionProgressGridView" 
                          SelectionMode="None" 
                          IsItemClickEnabled="True"
                          ItemClick="QuestionProgressGridView_ItemClick">

                    <GridView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsWrapGrid Orientation="Horizontal" MaximumRowsOrColumns="5"/>
                        </ItemsPanelTemplate>
                    </GridView.ItemsPanel>

                    <GridView.ItemTemplate>
                        <DataTemplate x:DataType="local:QuestionStatus">
                            <Border Width="35" 
                                    Height="35" 
                                    CornerRadius="4" 
                                    Margin="4" 
                                    BorderThickness="1"
                                    BorderBrush="{StaticResource AccentTextFillColorSecondaryBrush}">

                                <Border.Background>
                                    <SolidColorBrush Color="{x:Bind Color.Color, Mode=OneWay}"/>
                                </Border.Background>

                                <TextBlock Text="{x:Bind QuestionId}" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center" 
                                           FontSize="14" 
                                           FontWeight="SemiBold"
                                           Foreground="White"/>
                            </Border>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>
            </StackPanel>
        </Border>
    </Grid>
</Page>