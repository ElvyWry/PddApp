<Page
    x:Class="PddApp.ResultPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Content="На главную" Click="HomeButton_Click" Margin="0,0,0,30"/>

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="40">

            <TextBlock Text="Результаты тестирования" 
                       FontSize="36" 
                       FontWeight="Bold"/>

            <StackPanel x:Name="ResultsPanel" Spacing="15" Width="300">
                <TextBlock x:Name="TotalQuestionsText" FontSize="22"/>
                <TextBlock x:Name="CorrectText" FontSize="22" Foreground="Green"/>
                <TextBlock x:Name="IncorrectText" FontSize="22" Foreground="Red"/>
                <TextBlock x:Name="SkippedText" FontSize="22" Foreground="Orange"/>
            </StackPanel>

            <TextBlock x:Name="FinalResultText" 
                       FontSize="30" 
                       FontWeight="Bold" 
                       Margin="0,20,0,0"/>

        </StackPanel>

    </Grid>
</Page>